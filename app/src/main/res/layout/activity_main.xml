<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#12E265"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/zaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Time 15"
        android:textColor="#FF0000"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Score 0"
        android:textColor="#5F16CC"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/zaman"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/zaman"
        app:layout_constraintTop_toBottomOf="@+id/zaman" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="616dp"
        android:layout_height="409dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="125dp"
            android:onClick="scoreart"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/altin" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="130dp"
            android:layout_height="125dp"
            android:onClick="scoreart"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/deneme1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="125dp"
            android:onClick="scoreart"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/deneme1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="125dp"
            android:onClick="scoreart"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/deneme1" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="130dp"
            android:layout_height="125dp"
            android:onClick="scoreart"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/deneme1" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="130dp"
            android:layout_height="125dp"
            android:onClick="scoreart"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/altin" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="130dp"
            android:layout_height="125dp"
            android:onClick="scoreart"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/altin" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="130dp"
            android:layout_height="125dp"
            android:onClick="scoreart"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/deneme1" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="130dp"
            android:layout_height="125dp"
            android:onClick="scoreart"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/deneme1" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not: Altın Toplar 2 Puan Değerinde!"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.662" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="237dp"
        android:layout_height="157dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.972"
        app:srcCompat="@drawable/logo2" />
</androidx.constraintlayout.widget.ConstraintLayout>